---
const { ...tarif } = Astro.props;
import Check from "../assets/icones/check.webp";
---

<div
  class="flex flex-col justify-center items-center border border-black border-solid rounded-tl-2xl rounded-tr-2xl rounded-br-lg rounded-bl-lg mx-auto w-90"
>
  <div
    class="bg-black text-sweetwhite rounded-tl-2xl rounded-tr-2xl w-full h-20 flex items-center"
  >
    <h3 class="text-center font-creepster w-full text-4xl">{tarif.titre}</h3>
  </div>
  <div class="flex flex-col items-center w-full justify-center">
    <h3 class="font-montserrat font-bold text-2xl my-8">
      {tarif.prix}â‚¬/{tarif.jour} jour
    </h3>
    <div
      class="flex-col justify-center items-center text-lg font-montserrat mx-8 [&>p]:mb-6"
      set:html={tarif.description}
    />
    <div class="flex justify-center items-center mb-8 mx-8 gap-2">
      <img class="w-6" src={Check.src} alt="" />
      <p class="uppercase font-bold text-xs">{tarif.acces}</p>
    </div>

    <a
      href=""
      class="text-center bg-purple px-8 py-3 rounded-4xl text-md mt-2 mb-10"
      >Acheter</a
    >
  </div>
</div>
