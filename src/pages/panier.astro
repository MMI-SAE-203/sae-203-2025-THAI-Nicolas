---
import Layout from "../layouts/Layout.astro";
import PanierShop from "../assets/icones/panier.svg";
---

<Layout>
  <section>
    <header>
      <h1>Panier</h1>
    </header>
    <div class="flex flex-col justify-center items-center py-6 gap-6">
      <img src={PanierShop.src} alt="" />
      <p>Votre panier est vide :(</p>
      <a
        class="text-center bg-purple px-8 py-3 rounded-4xl text-md mt-2 mb-10"
        href="/billeterie">Billeterie</a
      >
    </div>
  </section>
</Layout>
